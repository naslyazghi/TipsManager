<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_note"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_modifie_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/btnstyle2"
        android:hint="@string/name"
        android:textColorHint="@color/white100"
        android:textColor="@color/white100"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txt_modifie_sales"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/btnstyle2"
        android:hint="@string/sales"
        android:textColorHint="@color/white100"
        android:textColor="@color/white100"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_modifie_tips"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btnstyle2"
        android:ems="10"
        android:hint="@string/tips"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/white100"
        android:textColorHint="@color/white100"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:weightSum="2">

        <Button
            android:id="@+id/txt_modifie_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btnstyle1"
            android:text="@string/update"
            android:textSize="18sp"
            android:textColor="@color/irishGreen"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/txt_modifie_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btnstyle3"
            android:text="@string/delete"
            android:textSize="18sp"
            android:textColor="#FD2E2E"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>