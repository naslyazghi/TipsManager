<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layer_top"
    android:padding="4dp">

    <TextView
        android:id="@+id/txt_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="Jonathan Castello"
        android:textColor="#BE97C6"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="Thursday 12:55 AM"
        android:textColor="#BE97C6" />

    <TextView
        android:id="@+id/SalesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="Sales: $"
        android:textSize="16sp"
        android:textColor="@color/white100"/>

    <TextView
        android:id="@+id/txt_sales2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time2"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/SalesLabel"
        android:layout_toRightOf="@+id/SalesLabel"
        android:text="5423"
        android:textSize="16sp"
        android:textColor="#EFBCD5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toStartOf="@+id/txt_tip2"
        android:layout_toLeftOf="@+id/txt_tip2"
        android:text="$"
        android:textSize="20sp"
        android:textColor="@color/white100"/>

    <TextView
        android:id="@+id/txt_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:text="25.3"
        android:textColor="#EFBCD5"
        android:textSize="40sp" />


</RelativeLayout>